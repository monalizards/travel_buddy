<div class="card">
  <% if trip.photo.present? %>
    <%= link_to trip_path(trip), class: "trip-info" do %>
      <div class="trip-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path trip.photo %>)">
        <h3><%= trip.title %></h3>
      </div>
      <!-- <div class="img-circle avatar">
        <%= link_to ,  %>
      </div> -->
    <% end %>
  <% else %>
   <%= link_to trip_path(trip), class: "trip-info" do %>
      <div class="trip-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_url('trip-images/lisbon.jpg') %>)">
        <h3><%= trip.title %></h3>
      </div>
    <% end %>
  <% end %>
</div>
