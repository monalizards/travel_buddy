<div class="container">
  <h1><%= @trip.title %></h1>
  <div class="trip-photo"></div>
  <div class="trip-buddy">Buddy: <%= link_to @trip.organizer.username, user_path(@trip.organizer) %></div>
  <span><%= @trip.description %></span>
  <h2>Trip details</h2>
  <div class="trip-info-container">
    <div class="trip-info">
      <span class="trip-info-q">Where?</span> <span class="trip-info-a"><%= @trip.destination %></span>
    </div>
    <div class="trip-info">
      <span class="trip-info-q">When?</span> <span class="trip-info-a"><%= @trip.start_date.strftime("%d %b %Y") %> to <%= @trip.end_date.strftime("%d %b %Y") %></span>
    </div>
    <div class="trip-info">
      <span class="trip-info-q">Budget?</span> <span class="trip-info-a">HKD$<%= @trip.budget %></span>
    </div>
    <div class="trip-info">
      <span class="trip-info-q">Max number of people?</span> <span class="trip-info-a"><%= @trip.max_participants %></span>
    </div>
  </div>

  <h2>Other travellers</h2>
  <ul>
    <% @trip.users.each do |user| %>
      <li>
        <%= link_to user.username, user_path(user) %>
      </li>
    <% end %>
  </ul>
  <% if @trip.users.count < @trip.max_participants %>
    <div>BookingButton</div>
  <% end %>

</div>
