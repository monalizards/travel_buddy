<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h3>Update Your Trip</h3>
      <%= simple_form_for(trip) do |t| %>
        <div class="row">
          <div class="col-xs-12">
            <%= t.input :title %>
            <%= t.input :destination, id: "destination" %>
            <%= t.input :budget %>

            <div class="form-inline">
              <%= f.label :start_date, style:"padding-right: 88px;"%>
              <%= f.label :end_date %>
              <br>
              <%= f.date_field :start_date, min: Date.today %>
              <%= f.date_field :end_date, min: Date.today %>
            </div>

            <%= t.input :max_participants %>
            <%= t.input :photo %>
            <%= t.input :photo_cache, as: :hidden %>
            <div class="form-actions">
              <%= t.button :submit, "Update" %>
            </div>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>

<%= link_to "Back", :back %>
